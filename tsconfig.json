{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "rootDir": "src" /* Specify the root folder within your source files. */,
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "jsx": "react-jsx",
  },
  "include": ["src"]
}
