{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "rootDir": "src" /* Specify the root folder within your source files. */,
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] // 配置 src 目录的别名为 "@"
    }
  },
  "include": ["src"]
}
